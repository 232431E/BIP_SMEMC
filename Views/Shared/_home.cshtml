<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Optiflow.AI</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* --- Nested Dropdown on Hover CSS --- */
        @@media (min-width: 992px) {
            .dropdown-menu .dropdown-toggle:after

        {
            border-top: .3em solid transparent;
            border-right: 0;
            border-bottom: .3em solid transparent;
            border-left: .3em solid;
            vertical-align: middle;
            margin-left: .5em;
        }

        .dropdown-menu .dropdown-toggle {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .dropdown-menu li {
            position: relative;
        }

        .dropdown-menu .submenu {
            display: none;
            position: absolute;
            left: 100%;
            top: -7px;
        }

        .dropdown-menu > li:hover > .submenu {
            display: block;
        }

        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="bg-light">

    <div class="bg-primary text-white small py-1">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <span><i class="bi bi-lightning-charge-fill me-1"></i> AI-Powered Financial Assistant</span>
            <span><i class="bi bi-shield-check me-1"></i> Secure · MAS-Aligned</span>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold fs-3 d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="bi bi-bar-chart-fill text-warning me-2"></i> Optiflow.AI
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                @{
                    var loggedInEmail = Context.Session.GetString("UserEmail");
                    var loggedInRole = Context.Session.GetString("UserRole");
                    var isLoggedIn = !string.IsNullOrWhiteSpace(loggedInEmail);
                    var isAdmin = string.Equals(loggedInRole, "Admin", System.StringComparison.OrdinalIgnoreCase);
                }

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  
                    @if (isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link fs-5" asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-speedometer2 me-1"></i> Dashboard
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fs-5" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-wallet2 me-1"></i> Finance
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Invoice" asp-action="Index">
                                        <i class="bi bi-receipt me-2 text-muted"></i> Invoices
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>

                                <li>
                                    <a class="dropdown-item dropdown-toggle" href="#">
                                        <i class="bi bi-cash-stack me-2 text-muted"></i> Cashflow Tools
                                    </a>
                                    <ul class="dropdown-menu submenu">
                                        <li><a class="dropdown-item" asp-controller="CashFlow" asp-action="Index">Forecast & Scenarios</a></li>
                                        <li><a class="dropdown-item" asp-controller="Budget" asp-action="Index">Budget & Variance</a></li>
                                        <li><a class="dropdown-item" asp-controller="Expense" asp-action="Index">Expense Manager</a></li>
										<li><a class="dropdown-item" asp-controller="ProfitImprovement" asp-action="Index">Profit Improvement</a></li>
									</ul>
                                </li>

                                
                                <li>
                                    <a class="dropdown-item dropdown-toggle" href="#">
                                        <i class="bi bi-bank me-2 text-muted"></i> Credit & Loans
                                    </a>
                                    <ul class="dropdown-menu submenu">
                                        <li><a class="dropdown-item" asp-controller="Credit" asp-action="Score">Credit Score Simulator</a></li>
                                        <li><a class="dropdown-item" asp-controller="Credit" asp-action="Lenders">Lender Matching</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fs-5" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-briefcase me-1"></i> HR & Operations
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Payroll" asp-action="Index">
                                        <i class="bi bi-people me-2 text-muted"></i> Payroll
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Debt" asp-action="Index">
                                        <i class="bi bi-credit-card me-2 text-muted"></i> Debt Tracker
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fs-5" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-lightbulb me-1"></i> Resources
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Chatbot" asp-action="Index">
                                        <i class="bi bi-robot me-2 text-primary"></i> AI Assistant
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Learning" asp-action="Index">
                                        <i class="bi bi-book me-2 text-muted"></i> Financial Literacy
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Community" asp-action="Index">
                                        <i class="bi bi-chat-heart me-2 text-muted"></i> Community Forum
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Rewards" asp-action="Index">
                                        <i class="bi bi-trophy me-2 text-warning"></i> Rewards
                                    </a>
                                </li>
                            </ul>
                        </li>

                        @if (isAdmin)
                        {
                            <li class="nav-item ms-lg-2">
                                <a class="nav-link fs-5 text-warning border border-warning rounded px-3" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-shield-lock-fill"></i> Admin
                                </a>
                            </li>
                        }
                    }
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle fs-5" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i> Account
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (isLoggedIn)
                            {
                                <li><span class="dropdown-item-text text-muted small fw-bold">@loggedInEmail</span></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">My Profile</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Settings">Settings</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="px-2 py-1">
                                        <button type="submit" class="btn btn-sm btn-outline-danger w-100">Sign Out</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Login">Login</a></li>
                                <li><a class="dropdown-item text-primary fw-bold" asp-controller="Account" asp-action="Signup">Sign Up Free</a></li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid pb-5">
        @RenderBody()
    </main>

    <footer class="bg-white border-top mt-5">
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold text-dark"><i class="bi bi-bar-chart-fill text-primary me-1"></i> Optiflow.AI</h6>
                    <p class="small text-muted mb-2">Empowering SMEs with AI-driven financial clarity.</p>
                    <span class="badge bg-primary-subtle text-primary">SME Focused</span>
                </div>
                <div class="col-md-3 mb-3">
                    <h6 class="fw-semibold">Quick Links</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-controller="Dashboard" asp-action="Index" class="text-decoration-none text-muted">Dashboard</a></li>
                        <li><a asp-controller="Invoice" asp-action="Index" class="text-decoration-none text-muted">Invoices</a></li>
                        <li><a asp-controller="Chatbot" asp-action="Index" class="text-decoration-none text-muted">AI Chat</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-3">
                    <h6 class="fw-semibold">Security</h6>
                    <ul class="list-unstyled small text-muted">
                        <li><i class="bi bi-lock me-1"></i> Encrypted</li>
                        <li><i class="bi bi-shield-check me-1"></i> Compliance Ready</li>
                    </ul>
                </div>
            </div>
            <div class="border-top pt-3 mt-3 small text-muted d-flex justify-content-between">
                <span>© @DateTime.Now.Year Optiflow.AI</span>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-muted">Privacy Policy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
