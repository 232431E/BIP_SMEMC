@model List<BIP_SMEMC.Models.ForumThread>

@if (!Model.Any())
{
    <div class="text-muted mt-3">
        No matching discussions found.
    </div>
}

@foreach (var thread in Model)
{
    <a class="text-decoration-none text-reset d-block mb-3 community-thread-link paginate-item"
       href="/Community/Thread/@thread.Id">
        <div class="card shadow-sm community-thread-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start gap-3 flex-wrap">
                    <div class="flex-grow-1">
                        <div class="d-flex flex-wrap gap-2 mb-2 align-items-center">
                            <span class="badge bg-secondary">@thread.Category</span>
                            @foreach (var tag in thread.Tags)
                            {
                                <span class="badge rounded-pill text-bg-light">@tag</span>
                            }
                        </div>

                        <h5 class="fw-semibold mb-1">@thread.Title</h5>
                        @if (!string.IsNullOrWhiteSpace(thread.Excerpt))
                        {
                            <div class="text-muted small mb-3">@thread.Excerpt</div>
                        }

                        <div class="d-flex align-items-center gap-3 flex-wrap small text-muted">
                            <div class="d-flex align-items-center gap-2">
                                <div class="avatar-circle">@(string.IsNullOrWhiteSpace(thread.Author) ? "U" : thread.Author.Substring(0, 1).ToUpper())</div>
                                <div>
                                    <div class="fw-semibold text-dark">@thread.Author <span class="badge text-bg-light ms-1">OP</span></div>
                                    <div class="text-muted">⭐ @thread.AuthorReputation reputation</div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center gap-3 ms-auto thread-stats">
                                <span><i class="bi bi-chat-left-text me-1"></i>@thread.RepliesCount</span>
                                <span><i class="bi bi-eye me-1"></i>@thread.ViewCount</span>
                            </div>
                        </div>
                    </div>

                    <div class="thread-upvote">
                        <button type="button"
                                class="btn btn-light btn-sm upvote-btn"
                                data-thread-id="@thread.Id">
                            <i class="bi bi-arrow-up"></i>
                        </button>
                        <div class="fw-semibold upvote-count" data-thread-id="@thread.Id">@thread.Upvotes</div>
                    </div>
                </div>
            </div>
        </div>
    </a>
}
