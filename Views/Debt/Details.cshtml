@model BIP_SMEMC.Models.CalculatedDebt

@{
    ViewBag.Title = "Debt Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3>Debt Details</h3>
                    <a asp-action="Index" class="btn btn-sm btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Creditor:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Creditor
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Principal Amount:</strong>
                        </div>
                        <div class="col-md-8">
                            $@Model.PrincipalAmount.ToString("N2")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Interest Rate:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.InterestRate%
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Start Date:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.StartDate.ToString("MMMM dd, yyyy")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Due Date:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.DueDate.ToString("MMMM dd, yyyy")
                        </div>
                    </div>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Interest Amount:</strong>
                        </div>
                        <div class="col-md-8">
                            $@Model.InterestAmount.ToString("N2")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong class="text-primary">Total Amount Due:</strong>
                        </div>
                        <div class="col-md-8">
                            <strong class="text-primary">$@Model.TotalAmount.ToString("N2")</strong>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Status:</strong>
                        </div>
                        <div class="col-md-8">
                            @{
                                var badgeClass = Model.DaysRemaining < 0 ? "badge bg-danger" : Model.DaysRemaining <= 7 ? "badge bg-warning text-dark" : "badge bg-success";
                                var daysText = Model.DaysRemaining < 0 ? $"OVERDUE by {Math.Abs(Model.DaysRemaining)} days" : $"{Model.DaysRemaining} days remaining";
                            }
                            <span class="@badgeClass">@daysText</span>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Description))
                    {
                        <hr />
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Description:</strong>
                            </div>
                            <div class="col-md-8">
                                @Model.Description
                            </div>
                        </div>
                    }

                    <hr />

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>

                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash me-1"></i> Delete
                        </button>

                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this debt for <strong>@Model.Creditor</strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>