@model BIP_SMEMC.Models.SignupViewModel
@{
    ViewData["Title"] = "Signup";
}

<div class="row justify-content-center py-5">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg">
            <div class="card-body p-4 p-md-5">
                <h1 class="h3 fw-bold mb-1">Create Account</h1>
                <p class="text-muted small mb-4">Get started with SME Finance Assistant</p>

                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                <form method="post" asp-action="Signup">
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Username</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Industry" class="form-label">Industry</label>
                        <select asp-for="Industry" class="form-select">
                            <option value="">Select industry</option>
                            @if (ViewBag.Industries != null)
                            {
                                foreach (var industry in (List<string>)ViewBag.Industries)
                                {
                                    <option value="@industry">@industry</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="Industry" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <div class="form-text">Minimum 6 chars, uppercase, lowercase, and a digit.</div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <div class="form-check mb-4">
                        <input asp-for="AgreeTerms" class="form-check-input" type="checkbox" />
                        <label asp-for="AgreeTerms" class="form-check-label">I agree to the Terms and Conditions</label>
                        <span asp-validation-for="AgreeTerms" class="text-danger small d-block"></span>
                    </div>
                    <button class="btn btn-primary w-100" type="submit">Create Account</button>
                </form>
                <div class="text-center mt-3">
                    <a asp-action="Login" class="small">Already have an account? Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
