@model BIP_SMEMC.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="row justify-content-center py-5">
    <div class="col-md-7 col-lg-5">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <h1 class="h4 fw-bold">Reset Password</h1>
                <p class="text-muted small">Set your new password below.</p>
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                <form method="post" asp-action="ResetPassword">
                    <input asp-for="AccessToken" type="hidden" id="accessToken" />
                    <div class="mb-3">
                        <label asp-for="NewPassword" class="form-label">New Password</label>
                        <input asp-for="NewPassword" type="password" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Update Password</button>
                </form>
            </div>
        </div>
    </div>
</div>
