@model BIP_SMEMC.Models.LearningTopic

@{
    ViewData["Title"] = Model.Title;

    string ToEmbedUrl(string rawUrl)
    {
        if (string.IsNullOrWhiteSpace(rawUrl)) return string.Empty;
        var url = rawUrl.Trim();

        if (url.Contains("youtube.com/watch?v=", StringComparison.OrdinalIgnoreCase))
        {
            var videoId = url.Split("watch?v=", StringSplitOptions.None).LastOrDefault()?.Split('&').FirstOrDefault();
            if (!string.IsNullOrWhiteSpace(videoId))
                return $"https://www.youtube.com/embed/{videoId}";
        }

        if (url.Contains("youtu.be/", StringComparison.OrdinalIgnoreCase))
        {
            var videoId = url.Split("youtu.be/", StringSplitOptions.None).LastOrDefault()?.Split('?').FirstOrDefault();
            if (!string.IsNullOrWhiteSpace(videoId))
                return $"https://www.youtube.com/embed/{videoId}";
        }

        return url;
    }
}

<div class="container mt-4">
    <style>
        .learning-media-wrap {
            max-width: 860px;
            margin: 0 auto 0.75rem auto;
        }

        .learning-image {
            width: 100%;
            max-height: 420px;
            object-fit: cover;
            border-radius: 0.5rem;
        }

        .learning-video-frame {
            border-radius: 0.5rem;
            overflow: hidden;
        }
    </style>

    <a href="/Learning" class="btn btn-link mb-3">
        ← Back to Learning Hub
    </a>

    <div class="card shadow-sm">
        <div class="card-body">

            <span class="badge bg-primary mb-2">
                @Model.Title
            </span>

            <h3 class="fw-bold mt-2">@Model.Title</h3>
            <div class="text-muted mb-3">
                Level: <strong>@(ViewData["Difficulty"] ?? "Beginner")</strong>
            </div>

            <p class="text-muted mt-3">
                Learn essential financial concepts through structured modules below.
            </p>

            <hr />

            @if (Model.Modules != null && Model.Modules.Any())
            {
                foreach (var module in Model.Modules)
                {
                    <div class="mb-4">
                        <h4 class="fw-semibold">@module.Title</h4>

                        @if (module.Sections != null && module.Sections.Any())
                        {
                            foreach (var section in module.Sections.OrderBy(s => s.Id))
                            {
                                <div class="mb-3">
                                    <h5 class="fw-semibold">@(section.Heading)</h5>
                                    <p class="text-muted">@(section.Body)</p>

                                    @if (!string.IsNullOrWhiteSpace(section.ImageUrl))
                                    {
                                        <div class="learning-media-wrap">
                                            <img src="@(section.ImageUrl)" class="learning-image" alt="Learning visual" />
                                        </div>
                                    }

                                    @if (!string.IsNullOrWhiteSpace(section.VideoUrl))
                                    {
                                        <div class="learning-media-wrap">
                                            <div class="ratio ratio-16x9 learning-video-frame">
                                                <iframe src="@(ToEmbedUrl(section.VideoUrl))" title="Learning video" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No learning content available.</p>
                        }
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No modules found for this topic.</p>
            }

            <hr />

<a href="@Url.Action("Quiz", "Learning", new { topicId = Model.Id, difficulty = ViewData["Difficulty"] ?? "Beginner" })"
   class="btn btn-success mt-3">
    Take Quiz
</a>
        </div>
    </div>
</div>

