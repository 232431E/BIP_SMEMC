@model BIP_SMEMC.Models.LearningModule

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <a href="/Learning" class="btn btn-link mb-3">
        ← Back to Learning Hub
    </a>

    <div class="card shadow-sm">
        <div class="card-body">

            <h3 class="fw-bold">@Model.Title</h3>

            <hr />

            @if (Model.Sections == null || !Model.Sections.Any())
            {
                <p class="text-muted">No learning content available.</p>
            }
            else
            {
                @foreach (var s in Model.Sections)
                {
                    <div class="mb-4">
                        <h5 class="fw-semibold">@s.Heading</h5>
                        <p class="text-muted">@s.Body</p>
                    </div>
                }
            }

        </div>
    </div>
</div>

