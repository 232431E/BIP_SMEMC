@using BIP_SMEMC.Models
@model LearningHubIndexViewModel

@{
    ViewData["Title"] = "Learning Hub";
}

<div class="d-flex justify-content-between align-items-start mb-4">
    <div>
        <h2 class="fw-bold mb-1">Financial Literacy & Skills Development Hub</h2>
        <div class="text-muted">Master financial skills through structured learning pathways</div>
    </div>

    <div class="card shadow-sm" style="min-width: 240px;">
        <div class="card-body d-flex align-items-center justify-content-between">
            <div class="me-3">
                <div class="text-muted small">Total Points</div>
                <div class="fs-3 fw-bold">@Model.TotalPoints</div>
                <div class="text-muted small">Expires: @DateTime.Now.AddYears(2).ToShortDateString()</div>
            </div>
            <div class="fs-1 text-warning">
                <i class="bi bi-trophy"></i>
            </div>
        </div>
    </div>
</div>

<div class="card border-primary-subtle bg-primary bg-opacity-10 mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center gap-2 mb-2">
            <i class="bi bi-info-circle text-primary"></i>
            <div class="fw-semibold">How Learning & Quizzes Work</div>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <div class="fw-semibold mb-1"><i class="bi bi-play-circle text-success me-1"></i> Learning Flow</div>
                <ul class="small text-muted mb-0">
                    <li>Read learning content (videos/reading can be added later)</li>
                    <li>Complete the quiz at the end of each module</li>
                    <li>Pass the quiz to earn points and unlock next level</li>
                </ul>
            </div>
            <div class="col-md-6">
                <div class="fw-semibold mb-1"><i class="bi bi-trophy text-warning me-1"></i> Scoring & Rewards</div>
                <ul class="small text-muted mb-0">
                    <li>80%+ score = Full points earned</li>
                    <li>Below 80% = Retry quiz (unlimited attempts)</li>
                    <li>Points are awarded once per topic per difficulty</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="d-flex align-items-center justify-content-between mb-3">
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link @(Model.ActiveDifficulty == LearningDifficulty.Beginner ? "active" : "")"
               href="@Url.Action("Index", "Learning", new { difficulty = LearningDifficulty.Beginner })">
                <i class="bi bi-star me-1"></i> Beginner
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.ActiveDifficulty == LearningDifficulty.Intermediate ? "active" : "")"
               href="@Url.Action("Index", "Learning", new { difficulty = LearningDifficulty.Intermediate })">
                <i class="bi bi-graph-up-arrow me-1"></i> Intermediate
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.ActiveDifficulty == LearningDifficulty.Advanced ? "active" : "")"
               href="@Url.Action("Index", "Learning", new { difficulty = LearningDifficulty.Advanced })">
                <i class="bi bi-lightning-charge me-1"></i> Advanced
            </a>
        </li>
    </ul>

    <div class="input-group" style="max-width: 420px;">
        <span class="input-group-text bg-white">
            <i class="bi bi-search"></i>
        </span>
        <input id="topicSearch" class="form-control" placeholder="Search topics..." />
    </div>
</div>

<div class="row g-4" id="topicsGrid">
    @foreach (var t in Model.Topics)
    {
        <div class="col-lg-6 topic-card"
             data-title="@t.Title.ToLower()"
             data-summary="@t.Summary.ToLower()"
             data-category="@t.Category.ToLower()">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <span class="badge bg-secondary">@t.Category</span>
                        <span class="badge bg-warning text-dark">
                            <i class="bi bi-trophy me-1"></i> @t.Points pts
                        </span>
                    </div>

                    <h5 class="fw-bold mb-1">@t.Title</h5>
                    <div class="text-muted mb-3">@t.Summary</div>

                    <div class="d-flex align-items-center justify-content-between">
                        <div class="text-muted small">
                            <i class="bi bi-clock me-1"></i> @t.EstimatedMinutes min
                        </div>

                        <div class="d-flex gap-2">
                            @if (!t.Unlocked)
                            {
                                <button class="btn btn-outline-secondary" disabled>
                                    <i class="bi bi-lock-fill me-1"></i> Locked
                                </button>
                            }
                            else if (t.Passed)
                            {
                                <a class="btn btn-outline-success"
                                   href="@Url.Action("Topic", "Learning", new { id = t.TopicId, difficulty = Model.ActiveDifficulty })">
                                    <i class="bi bi-check-circle me-1"></i> View
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-dark"
                                   href="@Url.Action("Topic", "Learning", new { id = t.TopicId, difficulty = Model.ActiveDifficulty })">
                                    <i class="bi bi-play-circle me-1"></i> Start Learning
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        (function () {
            const input = document.getElementById("topicSearch");
            const cards = document.querySelectorAll(".topic-card");

            function filter() {
                const q = (input.value || "").trim().toLowerCase();
                cards.forEach(c => {
                    const title = c.dataset.title || "";
                    const summary = c.dataset.summary || "";
                    const category = c.dataset.category || "";
                    const show = !q || title.includes(q) || summary.includes(q) || category.includes(q);
                    c.style.display = show ? "" : "none";
                });
            }

            input.addEventListener("input", filter); // real-time
        })();
    </script>
}

