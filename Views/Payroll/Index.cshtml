@model List<BIP_SMEMC.Models.CalculatedPayroll>

@{
    ViewBag.Title = "Payroll Management";
    var summary = (BIP_SMEMC.Models.PayrollSummary)ViewBag.Summary;
    var selectedMonth = (int)ViewBag.SelectedMonth;
    var selectedYear = (int)ViewBag.SelectedYear;
    var searchTerm = ViewBag.SearchTerm as string;
}

<div class="container-fluid mt-4 px-4">

    @* Success/Error Messages *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-4">
        <h1 class="display-5 fw-bold">Payroll Management</h1>
        <p class="text-muted fs-5">Manage employee salaries and generate payslips</p>
    </div>

    @* PAYROLL PERIOD SECTION - MATCHING FIGMA *@
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <h5 class="mb-3"><i class="bi bi-calendar3 me-2"></i>Payroll Period</h5>
                    <form asp-action="Index" asp-controller="Payroll" method="get" class="d-flex gap-2">
                        <input type="hidden" name="search" value="@searchTerm" />
                        <select name="month" class="form-select" onchange="this.form.submit()">
                            @for (int m = 1; m <= 12; m++)
                            {
                                <option value="@m" selected="@(m == selectedMonth)">
                                    @(new DateTime(2024, m, 1).ToString("MMMM"))
                                </option>
                            }
                        </select>
                        <select name="year" class="form-select" style="max-width: 120px;" onchange="this.form.submit()">
                            @for (int y = DateTime.Now.Year - 2; y <= DateTime.Now.Year + 1; y++)
                            {
                                <option value="@y" selected="@(y == selectedYear)">@y</option>
                            }
                        </select>
                    </form>
                </div>

                <div class="col-md-4 text-center">
                    <h5 class="text-muted mb-2">Total Payroll</h5>
                    <h2 class="text-success fw-bold mb-0">$@summary.TotalPayroll.ToString("N2")</h2>
                </div>

                <div class="col-md-4 text-center">
                    <h5 class="text-muted mb-2">Number of Employees</h5>
                    <h2 class="text-primary fw-bold mb-0">@summary.NumberOfEmployees</h2>
                </div>
            </div>
        </div>
    </div>

    @* ACTION BUTTONS ROW *@
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="d-flex gap-3">
                <a asp-action="Create" asp-controller="Payroll" class="btn btn-primary btn-lg">
                    <i class="bi bi-person-plus me-2"></i> Add Employee
                </a>
                <a asp-action="EnterOvertime" asp-controller="Payroll" class="btn btn-warning btn-lg">
                    <i class="bi bi-clock-history me-2"></i> Enter Overtime Hours
                </a>
                <form asp-action="SendAllPayslips" asp-controller="Payroll" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="month" value="@selectedMonth" />
                    <input type="hidden" name="year" value="@selectedYear" />
                    <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('Send payslips to all employees for @summary.MonthYear?');">
                        <i class="bi bi-send me-2"></i> Send Payslip to All
                    </button>
                </form>
            </div>
        </div>

        @* SEARCH BAR *@
        <div class="col-md-4">
            <form asp-action="Index" asp-controller="Payroll" method="get" class="d-flex gap-2">
                <input type="hidden" name="month" value="@selectedMonth" />
                <input type="hidden" name="year" value="@selectedYear" />
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-white">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text"
                           name="search"
                           class="form-control"
                           placeholder="Search by ID or Name..."
                           value="@searchTerm" />
                    @if (!string.IsNullOrWhiteSpace(searchTerm))
                    {
                        <a asp-action="Index"
                           asp-controller="Payroll"
                           asp-route-month="@selectedMonth"
                           asp-route-year="@selectedYear"
                           class="btn btn-outline-secondary"
                           title="Clear search">
                            <i class="bi bi-x-lg"></i>
                        </a>
                    }
                    <button type="submit" class="btn btn-primary">
                        Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    @* SEARCH RESULTS INFO *@
    @if (!string.IsNullOrWhiteSpace(searchTerm))
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center">
            <span>
                <i class="bi bi-info-circle me-2"></i>
                Showing results for: <strong>"@searchTerm"</strong> - Found <strong>@Model.Count</strong> employee(s)
            </span>
            <a asp-action="Index"
               asp-controller="Payroll"
               asp-route-month="@selectedMonth"
               asp-route-year="@selectedYear"
               class="btn btn-sm btn-outline-primary">
                Clear Search
            </a>
        </div>
    }

    @* EMPLOYEE PAY DETAILS *@
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
            <h4 class="mb-0"><i class="bi bi-people me-2"></i>Employee Pay Details - @summary.MonthYear</h4>
        </div>
        <div class="card-body p-0">
            @if (Model == null || Model.Count == 0)
            {
                @if (!string.IsNullOrWhiteSpace(searchTerm))
                {
                    <div class="text-center py-5">
                        <i class="bi bi-search" style="font-size: 4rem; color: #ccc;"></i>
                        <h3 class="mt-3 text-muted">No employees found</h3>
                        <p class="text-muted">No employees match your search: "@searchTerm"</p>
                        <a asp-action="Index"
                           asp-controller="Payroll"
                           asp-route-month="@selectedMonth"
                           asp-route-year="@selectedYear"
                           class="btn btn-primary mt-3">
                            View All Employees
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-people" style="font-size: 4rem; color: #ccc;"></i>
                        <h3 class="mt-3 text-muted">No employees yet</h3>
                        <p class="text-muted">Add your first employee to start managing payroll</p>
                    </div>
                }
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Employee ID</th>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Email</th>
                                <th class="text-end">Base Salary</th>
                                <th class="text-end">OT Hours</th>
                                <th class="text-end">OT Pay</th>
                                <th class="text-end">Gross Pay</th>
                                <th class="text-end">CPF (Employee)</th>
                                <th class="text-end">Net Pay</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payroll in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@payroll.Employee.EmployeeId</td>
                                    <td>@payroll.Employee.Name</td>
                                    <td>@payroll.Employee.Position</td>
                                    <td><small>@payroll.Employee.Email</small></td>
                                    <td class="text-end">$@payroll.BaseSalary.ToString("N2")</td>
                                    <td class="text-end">
                                        @if (payroll.OvertimeHours > 0)
                                        {
                                            <span class="badge bg-warning text-dark">@payroll.OvertimeHours hrs</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0 hrs</span>
                                        }
                                    </td>
                                    <td class="text-end">$@payroll.OvertimePay.ToString("N2")</td>
                                    <td class="text-end fw-bold">$@payroll.GrossPay.ToString("N2")</td>
                                    <td class="text-end text-danger">-$@payroll.EmployeeCPF.ToString("N2")</td>
                                    <td class="text-end fw-bold text-success">$@payroll.NetPay.ToString("N2")</td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="GeneratePayslip"
                                               asp-controller="Payroll"
                                               asp-route-id="@payroll.Employee.Id"
                                               asp-route-month="@selectedMonth"
                                               asp-route-year="@selectedYear"
                                               class="btn btn-success"
                                               target="_blank"
                                               title="View Payslip">
                                                <i class="bi bi-file-earmark-pdf"></i>
                                            </a>
                                            <a asp-action="Edit"
                                               asp-controller="Payroll"
                                               asp-route-id="@payroll.Employee.Id"
                                               class="btn btn-primary"
                                               title="Edit Employee">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="DeleteEmployee"
                                                  asp-controller="Payroll"
                                                  asp-route-id="@payroll.Employee.Id"
                                                  method="post"
                                                  style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="btn btn-danger"
                                                        onclick="return confirm('Are you sure you want to delete @payroll.Employee.Name?');"
                                                        title="Delete Employee">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr class="fw-bold">
                                <td colspan="9" class="text-end">
                                    @if (!string.IsNullOrWhiteSpace(searchTerm))
                                    {
                                        <span>FILTERED TOTAL:</span>
                                    }
                                    else
                                    {
                                        <span>TOTAL NET PAYROLL:</span>
                                    }
                                </td>
                                <td class="text-end text-success fs-5">
                                    $@Model.Sum(p => p.NetPay).ToString("N2")
                                </td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>