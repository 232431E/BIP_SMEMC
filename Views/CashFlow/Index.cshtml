@model BIP_SMEMC.Models.CashFlowViewModel
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-warning border-2 shadow-sm mb-4">
        <div class="d-flex align-items-center">
            <i class="bi bi-cloud-slash-fill fs-3 me-3"></i>
            <div>
                <strong>Connectivity Issue:</strong> @ViewBag.ErrorMessage
            </div>
        </div>
    </div>
}
<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">AI Cash Flow Forecasting</h1>
            <p class="text-muted">Visualize liquidity risks and simulate business decisions.</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4 bg-light">
        <div class="card-body">
            <div class="d-flex align-items-center mb-2">
                <i class="bi bi-robot text-primary me-2 fs-4"></i>
                <h5 class="fw-bold m-0 text-primary">Gemini Financial Insight</h5>
            </div>
            <p class="mb-0 text-dark">
                @if (!string.IsNullOrEmpty(Model.AIAnalysis))
                {
                    @Model.AIAnalysis
                }
                else
                {
                    <span class="text-muted fst-italic">Gathering insights...</span>
                }
            </p>
        </div>
    </div>

    @{
        var shortfall = Model.ChartData.Where(d => d.Predicted < 0).FirstOrDefault();
    }
    @if (shortfall != null)
    {
        <div class="alert alert-danger border-start border-4 shadow-sm mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-octagon-fill fs-3 me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">Liquidity Risk Detected!</h5>
                    <p class="mb-0">
                        Your balance is projected to fall below zero on <strong>@shortfall.Date</strong>.
                        This represents a decrease of $@((Model.CurrentBalance - shortfall.Predicted.Value).ToString("N0")) from today.
                    </p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success border-start border-4 shadow-sm mb-4">
            <i class="bi bi-check-circle-fill me-2"></i> Your cash flow trend remains positive for the next 30 days.
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <canvas id="forecastChart" style="max-height: 400px;"></canvas>
        </div>
    </div>

    <div class="accordion mb-4" id="calculationAccordion">
        <div class="accordion-item shadow-sm">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCalc">
                    <i class="bi bi-calculator me-2"></i> How is this calculated? (ML Model Details)
                </button>
            </h2>
            <div id="collapseCalc" class="accordion-collapse collapse" data-bs-parent="#calculationAccordion">
                <div class="accordion-body bg-light">
                    <h6><strong>Prediction Logic:</strong> Advanced Linear Trend with Seasonality</h6>
                    <p class="small text-muted">@ViewBag.AiJustification</p>
                    <hr />
                    <h6><strong>Formula Used:</strong></h6>
                    <code>NewBalance = CurrentBalance + (SeasonalAvg / 30 * days) - (RecurringOutflows / 30 * days)</code>
                    <ul class="mt-3 small">
                        <li><strong>SeasonalAvg:</strong> Based on historical data for this specific month in previous years.</li>
                        <li><strong>RecurringOutflows:</strong> Identified constant payments appearing 3+ times in your GL.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold"><i class="bi bi-magic me-2"></i>What-If Scenario Simulator</div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label small">Expected Monthly Revenue ($)</label>
                            <input type="number" id="scenRevenue" class="form-control" placeholder="e.g. 50000">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small">Recurring Monthly Expense ($)</label>
                            <input type="number" id="scenRecur" class="form-control" placeholder="e.g. 15000">
                        </div>
                        <div class="col-12">
                            <label class="form-label small">Fixed One-Time Expense ($)</label>
                            <input type="number" id="scenFixed" class="form-control" placeholder="e.g. 5000">
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100" onclick="updateScenario()">
                                <i class="bi bi-play-fill me-1"></i>Run Simulation
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <span class="fw-bold"><i class="bi bi-newspaper me-2"></i>SME News Feed</span>
                        <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#newsPrefsModal">
                            <i class="bi bi-funnel"></i> Preferences
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="row" id="newsContainer">
                            @foreach (var news in Model.News)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="p-3 border rounded h-100 bg-white">
                                        <span class="badge bg-info mb-2">
                                            @(news.Industries != null && news.Industries.Any() ? news.Industries.First() : "General")
                                        </span>                                        <h6 class="fw-bold">@news.Title</h6>
                                        <p class="extra-small text-muted">@news.Summary</p>
                                        <a href="@news.Url" target="_blank" class="small">Read Full Article</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (ViewBag.Outlooks != null)
        {
            <div class="row mt-4">
                <h5 class="fw-bold"><i class="bi bi-graph-up-arrow me-2"></i>Market Outlook & Leaders</h5>
                @foreach (var outlook in (List<BIP_SMEMC.Models.NewsOutlookModel>)ViewBag.Outlooks)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">@outlook.Industry (@outlook.Region)</div>
                                <p class="small text-dark">@outlook.OutlookSummary</p>
                                <div class="bg-light p-2 rounded">
                                    <span class="small fw-bold text-muted">Top 5 Influencers:</span>
                                    <div class="d-flex flex-wrap gap-1 mt-1">
                                        @foreach (var leader in outlook.TopLeaders ?? new List<string>())
                                        {
                                            <span class="badge badge-secondary text-dark border">@leader</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<div class="modal fade" id="newsPrefsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Interests</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="small text-muted mb-3">Select the industries and regions you want to monitor for AI Outlooks.</p>

                <h6>Industries</h6>
                <div class="row mb-3 px-2">
                    @if (ViewBag.AllIndustries != null)
                    {
                        foreach (var ind in (List<BIP_SMEMC.Models.IndustryModel>)ViewBag.AllIndustries)
                        {
                            <div class="form-check col-6">
                                <input class="form-check-input pref-industry" type="checkbox" value="@ind.Name"
                                       @(Model.UserPreferences?.Industries?.Contains(ind.Name) == true ? "checked" : "")>
                                <label class="form-check-label small">@ind.Name</label>
                            </div>
                        }
                    }
                </div>

                <h6>Regions</h6>
                <div class="row px-2">
                    @if (ViewBag.AllRegions != null)
                    {
                        foreach (var reg in (List<BIP_SMEMC.Models.RegionModel>)ViewBag.AllRegions)
                        {
                            <div class="form-check col-6">
                                <input class="form-check-input pref-region" type="checkbox" value="@reg.Name"
                                       @(Model.UserPreferences?.Regions?.Contains(reg.Name) == true ? "checked" : "")>
                                <label class="form-check-label small">@reg.Name</label>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-primary w-100" onclick="updatePreferences()">
                    <i class="bi bi-save me-1"></i> Save Preferences
                </button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const rawChartData = @Html.Raw(Json.Serialize(Model.ChartData));

        console.group("Cash Flow Debugging");
        console.log("Total Points:", rawChartData.length);
        console.log("First Point Date:", rawChartData[0]?.date);
        console.log("Current Balance from Model:", @Model.CurrentBalance);
        console.groupEnd();

                function initChart(data) {
            const ctx = document.getElementById('forecastChart').getContext('2d');
            if (window.myChart) window.myChart.destroy();

            window.myChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.map(d => d.date),
                    datasets: [
                        {
                            label: 'Actuals',
                            data: data.map(d => d.actual),
                            borderColor: '#0d6efd',
                            pointRadius: 3,        // Make points visible
                            hitRadius: 20,         // Large area for clicking
                            hoverRadius: 7         // Visual feedback on hover
                        },
                        {
                            label: 'AI Prediction',
                            data: data.map(d => d.predicted),
                            borderDash: [5,5],
                            borderColor: '#6610f2',
                            pointRadius: 0,        // Keep prediction lines clean
                            hitRadius: 20
                        }
                    ]
                },
                options: {
                    onClick: (e, elements) => {
                        if (elements.length > 0) {
                            const index = elements[0].index;
                            const date = data[index].date;
                            console.log("Point Clicked:", date);
                            // Add your drill-down or modal logic here
                        }
                    },
                    scales: {
                        x: {
                            ticks: {
                                autoSkip: true,
                                maxTicksLimit: 10 // Prevents date crowding
                            }
                        }
                    }
                }
            });
        }
        initChart(rawChartData);

        async function updatePreferences() {
            const industries = Array.from(document.querySelectorAll('.pref-industry:checked')).map(cb => cb.value);
            const regions = Array.from(document.querySelectorAll('.pref-region:checked')).map(cb => cb.value);

            const formData = new URLSearchParams();
            // Use the exact parameter names from the C# method: 'industries' and 'regions'
            industries.forEach(val => formData.append('industries', val));
            regions.forEach(val => formData.append('regions', val));

            const response = await fetch('/CashFlow/UpdatePreferences', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: formData
            });

            const result = await response.json();
            if (result.success) {
                location.reload();
            } else {
                console.error("Save failed:", result.error);
                alert("Failed to save. Check Debug console.");
            }
        }
        
                            
    </script>
}