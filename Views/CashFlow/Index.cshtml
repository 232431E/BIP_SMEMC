@model BIP_SMEMC.Models.CashFlowViewModel

<div class="container-fluid p-4 bg-light min-vh-100">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-dark mb-1">AI Cash Flow Forecasting</h1>
            <p class="text-muted small mb-0">Visualize liquidity risks and simulate business scenarios.</p>
        </div>
        <div>
            @if (ViewBag.ErrorMessage != null)
            {
                <span class="badge bg-warning text-dark"><i class="bi bi-exclamation-triangle me-1"></i> @ViewBag.ErrorMessage</span>
            }
        </div>
    </div>

    <div class="alert alert-primary border-0 shadow-sm d-flex align-items-center mb-4">
        <i class="bi bi-robot fs-3 me-3"></i>
        <div>
            <h6 class="fw-bold mb-0">Gemini Financial Insight</h6>
            <p class="mb-0 small">@(string.IsNullOrEmpty(Model.AIAnalysis) ? "Analyzing your latest transaction patterns..." : Model.AIAnalysis)</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                <h6 class="fw-bold m-0"><i class="bi bi-graph-up me-2"></i>Cash Flow Projection</h6>

                <div class="d-flex align-items-center bg-light rounded p-1">
                    <div class="btn-group btn-group-sm" role="group">
                        <button type="button" class="btn btn-white border-0 fw-bold active" onclick="updateChartWindow(2, 1, this)">3M</button>
                        <button type="button" class="btn btn-white border-0 fw-bold" onclick="updateChartWindow(5, 1, this)">6M</button>
                        <button type="button" class="btn btn-white border-0 fw-bold" onclick="updateChartWindow(11, 1, this)">1Y</button>
                    </div>
                    <div class="vr mx-2"></div>
                    <div class="d-flex gap-1">
                        <input type="date" id="startDatePicker" class="form-control form-control-sm border-0 bg-transparent" style="width: 110px;">
                        <span class="text-muted align-self-center">-</span>
                        <input type="date" id="endDatePicker" class="form-control form-control-sm border-0 bg-transparent" style="width: 110px;">
                        <button class="btn btn-sm btn-primary ms-1" onclick="applyCustomRange()"><i class="bi bi-check"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div style="height: 400px; width: 100%;">
                <canvas id="forecastChart"></canvas>
            </div>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="fw-bold m-0 text-success"><i class="bi bi-sliders me-2"></i>What-If Simulator</h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-4">Adjust parameters to see how they impact the prediction (Dashed Purple Line) in the selected view.</p>

                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Est. Monthly Revenue Addition</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">$</span>
                            <input type="number" id="scenRevenue" class="form-control border-start-0" placeholder="0">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Est. Monthly Expense Increase</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">$</span>
                            <input type="number" id="scenRecur" class="form-control border-start-0" placeholder="0">
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted">One-Time Capital Expenditure</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">$</span>
                            <input type="number" id="scenFixed" class="form-control border-start-0" placeholder="0">
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-success" onclick="runSimulation()">
                            <i class="bi bi-activity me-2"></i>Simulate Impact
                        </button>
                        <button class="btn btn-outline-secondary btn-sm" onclick="clearSimulation()">
                            Reset
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold m-0"><i class="bi bi-globe-asia-australia me-2"></i>Market Intelligence</h6>
                    <button class="btn btn-sm btn-light border" data-bs-toggle="modal" data-bs-target="#newsPrefsModal">
                        <i class="bi bi-funnel me-1"></i> Filter Interests
                    </button>
                </div>
                <div class="card-body p-0">
                    @if (ViewBag.Outlooks != null)
                    {
                        var outlooks = (List<BIP_SMEMC.Models.NewsOutlookModel>)ViewBag.Outlooks;
                        if (outlooks.Any())
                        {
                            <div class="bg-primary bg-opacity-10 p-4 border-bottom">
                                <h6 class="fw-bold text-primary mb-2">Executive Summary</h6>
                                <p class="small text-dark mb-0">
                                    @foreach (var o in outlooks)
                                    {
                                        <span class="d-block mb-2">
                                            <strong>@o.Industry (@o.Region):</strong> @o.OutlookSummary
                                        </span>
                                    }
                                </p>
                            </div>
                        }
                    }

                    <div style="max-height: 400px; overflow-y: auto;" class="p-3">
                        <h6 class="small fw-bold text-muted mb-3 text-uppercase">Latest Curated News</h6>
                        @foreach (var news in Model.News)
                        {
                            <div class="d-flex gap-3 mb-3 border-bottom pb-3">
                                <div class="flex-shrink-0 text-center" style="width: 50px;">
                                    <div class="bg-light rounded p-1 border">
                                        <i class="bi bi-newspaper text-muted h4"></i>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-1 fw-bold text-dark">
                                        <a href="@news.Url" target="_blank" class="text-decoration-none text-dark hover-primary">@news.Title</a>
                                    </h6>
                                    <div class="mb-1">
                                        @foreach (var tag in news.Industries ?? new List<string>())
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary extra-small border">@tag</span>
                                        }
                                    </div>
                                    <p class="small text-muted mb-0">@news.Summary</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="newsPrefsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">Customize Intelligence Feed</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="small text-muted mb-3">Select industries and regions to tailor your market outlook and news feed.</p>
                <div class="row">
                    <div class="col-6 border-end">
                        <h6 class="small fw-bold text-uppercase text-muted">Industries</h6>
                        <div class="d-flex flex-column gap-2">
                            @if (ViewBag.AllIndustries != null)
                            {
                                foreach (var ind in (List<BIP_SMEMC.Models.IndustryModel>)ViewBag.AllIndustries)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input pref-industry" type="checkbox" value="@ind.Name"
                                               @(Model.UserPreferences?.Industries?.Contains(ind.Name) == true ? "checked" : "")>
                                        <label class="form-check-label small">@ind.Name</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <div class="col-6 ps-4">
                        <h6 class="small fw-bold text-uppercase text-muted">Regions</h6>
                        <div class="d-flex flex-column gap-2">
                            @if (ViewBag.AllRegions != null)
                            {
                                foreach (var reg in (List<BIP_SMEMC.Models.RegionModel>)ViewBag.AllRegions)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input pref-region" type="checkbox" value="@reg.Name"
                                               @(Model.UserPreferences?.Regions?.Contains(reg.Name) == true ? "checked" : "")>
                                        <label class="form-check-label small">@reg.Name</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-light border-0">
                <button type="button" class="btn btn-primary w-100" onclick="updatePreferences()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // --- 1. DATA INITIALIZATION ---
        const fullData = @Html.Raw(Json.Serialize(Model.ChartData));
        const currentBalance = @Model.CurrentBalance;
        let chartInstance = null;

        // --- ANCHOR DATE FIX ---
        const anchorDateStr = "@Model.LatestDataDate.ToString("yyyy-MM-dd")";
        // If model is empty, fallback to today, but log a warning
        const anchorDate = anchorDateStr ? new Date(anchorDateStr) : new Date();

        console.log("Chart Anchor Date:", anchorDate.toLocaleDateString());
        document.addEventListener("DOMContentLoaded", () => {
            // Default View: 3M button (2 Months Back, 1 Month Forward)
            // Pass the anchorDate to the update function implicitly via logic
            updateChartWindow(2, 1, document.querySelectorAll('.btn-group button')[0]);
        });

        // --- 2. CHART RENDERING ENGINE ---
        function renderChart(filteredData, simulatedData = null) {
            const ctx = document.getElementById('forecastChart').getContext('2d');
            if (chartInstance) chartInstance.destroy();

            const datasets = [
                {
                    label: 'Actual Balance',
                    data: filteredData.map(d => d.actual),
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    pointRadius: 2,
                    tension: 0.3,
                    fill: true
                },
                {
                    label: 'AI Prediction',
                    data: filteredData.map(d => d.predicted),
                    borderColor: '#6610f2', // Purple
                    borderDash: [5, 5],
                    pointRadius: 0,
                    tension: 0.3,
                    fill: false
                }
            ];

            // Add Simulation Line if active
            if (simulatedData) {
                datasets.push({
                    label: 'Simulated Outcome',
                    data: simulatedData,
                    borderColor: '#198754', // Green
                    borderWidth: 2,
                    pointRadius: 3,
                    pointBackgroundColor: '#198754',
                    tension: 0.3,
                    fill: false
                });
            }

            chartInstance = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: filteredData.map(d => new Date(d.date).toLocaleDateString()),
                    datasets: datasets
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: { mode: 'index', intersect: false },
                    plugins: {
                        legend: { display: true, position: 'top' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) label += ': ';
                                    if (context.parsed.y !== null) {
                                        label += new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed.y);
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        x: { grid: { display: false } },
                        y: {
                            beginAtZero: false,
                            grid: { borderDash: [5, 5] },
                            ticks: { callback: (val) => '$' + val / 1000 + 'k' }
                        }
                    }
                }
            });
        }

        // --- 3. FILTER LOGIC (UPDATED TO USE ANCHOR) ---
        function updateChartWindow(monthsBack, monthsForward, btnElement) {
            if(btnElement) {
                document.querySelectorAll('.btn-group button').forEach(b => b.classList.remove('active'));
                btnElement.classList.add('active');
            }

            // USE ANCHOR DATE instead of new Date()
            const startDate = new Date(anchorDate);
            startDate.setMonth(startDate.getMonth() - monthsBack);

            const endDate = new Date(anchorDate);
            endDate.setMonth(endDate.getMonth() + monthsForward);

            const filtered = fullData.filter(d => {
                const dDate = new Date(d.date);
                return dDate >= startDate && dDate <= endDate;
            });

            renderChart(filtered);

            if(document.getElementById('scenRevenue').value) runSimulation();
        }

        function applyCustomRange() {
            const start = new Date(document.getElementById('startDatePicker').value);
            const end = new Date(document.getElementById('endDatePicker').value);

            if(isNaN(start) || isNaN(end)) { alert("Please select valid dates"); return; }

            const filtered = fullData.filter(d => {
                const date = new Date(d.date);
                return date >= start && date <= end;
            });

            renderChart(filtered);
        }
        // --- 4. SIMULATION LOGIC ---
        function runSimulation() {
            // 1. Get Inputs
            const revIncrease = parseFloat(document.getElementById('scenRevenue').value) || 0;
            const expIncrease = parseFloat(document.getElementById('scenRecur').value) || 0;
            const oneTimeCost = parseFloat(document.getElementById('scenFixed').value) || 0;
            const netMonthlyChange = revIncrease - expIncrease;

            // 2. Get Current Chart Data
            const basePredictions = chartInstance.data.datasets[1].data; // Index 1 is AI Prediction

            const simulatedData = [];

            // 3. Calculate Simulation Line
            // Find index in current VIEW where prediction line starts
            let startIdx = basePredictions.findIndex(val => val !== null);

            if (startIdx === -1) {
                alert("Please select a range that includes future dates to run a simulation.");
                return;
            }

            for (let i = 0; i < basePredictions.length; i++) {
                if (i < startIdx) {
                    simulatedData.push(null); // No sim for historical part
                } else {
                    // Calculate months passed since start of prediction
                    const daysPassed = i - startIdx;
                    const monthsPassed = daysPassed / 30; // Approx 30 days/month

                    // Formula: Original_Pred + (NetChange * Months) - OneTimeCost
                    let newVal = basePredictions[i] + (netMonthlyChange * monthsPassed) - oneTimeCost;
                    simulatedData.push(newVal);
                }
            }

            // 4. Update Chart
            // Remove old simulation if exists
            const existingSimIdx = chartInstance.data.datasets.findIndex(ds => ds.label === 'Simulated Outcome');
            if (existingSimIdx !== -1) chartInstance.data.datasets.splice(existingSimIdx, 1);

            chartInstance.data.datasets.push({
                label: 'Simulated Outcome',
                data: simulatedData,
                borderColor: '#198754',
                borderWidth: 2,
                pointRadius: 0,
                borderDash: [2, 2],
                tension: 0.3,
                fill: false
            });

            chartInstance.update();
        }

        function clearSimulation() {
            document.getElementById('scenRevenue').value = '';
            document.getElementById('scenRecur').value = '';
            document.getElementById('scenFixed').value = '';

            const existingSimIdx = chartInstance.data.datasets.findIndex(ds => ds.label === 'Simulated Outcome');
            if (existingSimIdx !== -1) {
                chartInstance.data.datasets.splice(existingSimIdx, 1);
                chartInstance.update();
            }
        }

        // --- 5. PREFERENCES AJAX ---
        async function updatePreferences() {
            const industries = Array.from(document.querySelectorAll('.pref-industry:checked')).map(cb => cb.value);
            const regions = Array.from(document.querySelectorAll('.pref-region:checked')).map(cb => cb.value);
            const formData = new URLSearchParams();
            industries.forEach(val => formData.append('industries', val));
            regions.forEach(val => formData.append('regions', val));

            const response = await fetch('/CashFlow/UpdatePreferences', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: formData
            });

            const result = await response.json();
            if (result.success) location.reload();
            else alert("Failed to save.");
        }
    </script>
}