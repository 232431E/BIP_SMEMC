@model BIP_SMEMC.Models.CashFlowViewModel

<div class="container-fluid p-4 bg-light min-vh-100">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-dark mb-1">Smart Cash Flow Forecast</h1>
            <p class="text-muted small mb-0">AI-driven projection excluding one-off anomalies.</p>
        </div>
    </div>

    <div class="alert alert-primary border-0 shadow-sm d-flex align-items-center mb-4">
        <i class="bi bi-robot fs-3 me-3 text-primary"></i>
        <div>
            <h6 class="fw-bold mb-0">Gemini Financial Insight</h6>
            <p class="mb-0 small text-dark">@(string.IsNullOrEmpty(Model.AIAnalysis) ? "Analyzing patterns..." : Model.AIAnalysis)</p>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-start border-primary border-4 h-100">
                <div class="card-body p-3">
                    <h6 class="text-muted small text-uppercase">Current Cash</h6>
                    <h3 class="fw-bold text-dark mb-0">$@Model.CurrentBalance.ToString("N0")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-start border-warning border-4 h-100">
                <div class="card-body p-3">
                    <h6 class="text-muted small text-uppercase">Fixed Monthly Burn</h6>
                    <h3 class="fw-bold text-dark mb-0">$@Model.MonthlyFixedBurn.ToString("N0")</h3>
                    <small class="text-muted sx-small">Rent, Loans, Payroll</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-start @(Model.CashRunway.Contains("Stable") ? "border-success" : "border-danger") border-4 h-100">
                <div class="card-body p-3">
                    <h6 class="text-muted small text-uppercase">Est. Runway</h6>
                    <h3 class="fw-bold text-dark mb-0">@Model.CashRunway</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-start border-info border-4 h-100">
                <div class="card-body p-3">
                    <h6 class="text-muted small text-uppercase">30-Day Projection</h6>
                    <h3 class="fw-bold text-primary mb-0">$@Model.ProjectedCashIn30Days.ToString("N0")</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-3">
        <div class="card-header bg-white py-2 d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
            <h6 class="fw-bold m-0"><i class="bi bi-graph-up me-2"></i>Projection</h6>

            <div class="d-flex align-items-center bg-light rounded p-1">
                <div class="btn-group btn-group-sm me-2" role="group">
                    <button type="button" class="btn btn-outline-secondary active" onclick="updateChartWindow(2, 1, this)">3M</button>
                    <button type="button" class="btn btn-outline-secondary" onclick="updateChartWindow(5, 1, this)">6M</button>
                    <button type="button" class="btn btn-outline-secondary" onclick="updateChartWindow(11, 1, this)">1Y</button>
                </div>
                <div class="d-flex gap-1 border-start ps-2">
                    <input type="date" id="startDatePicker" class="form-control form-control-sm border-0 bg-transparent py-0" style="width: 110px;">
                    <span class="text-muted align-self-center small">-</span>
                    <input type="date" id="endDatePicker" class="form-control form-control-sm border-0 bg-transparent py-0" style="width: 110px;">
                    <button class="btn btn-sm btn-primary py-0" onclick="applyCustomRange()"><i class="bi bi-check"></i></button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div style="height: 350px; width: 100%;">
                <canvas id="forecastChart"></canvas>
            </div>
        </div>
    </div>

    <div class="accordion shadow-sm mb-4" id="accordionExplanation">
        <div class="accordion-item border-0">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed bg-white text-muted small py-2" type="button" data-bs-toggle="collapse" data-bs-target="#collapseInfo">
                    <i class="bi bi-calculator me-2"></i> How is this calculated? Why is the trend negative?
                </button>
            </h2>
            <div id="collapseInfo" class="accordion-collapse collapse" data-bs-parent="#accordionExplanation">
                <div class="accordion-body bg-light small">
                    <div class="row g-3">
                        <div class="col-md-4 border-end">
                            <h6 class="fw-bold text-dark">1. The Formula</h6>
                            <code>Projected = (Avg Monthly Revenue) - (Avg Fixed Costs) - (Revenue * Variable Ratio)</code>
                            <p class="mt-2 text-muted mb-0">We analyze the last 6 months of your data to determine these baselines.</p>
                        </div>
                        <div class="col-md-4 border-end">
                            <h6 class="fw-bold text-dark">2. Trend Diagnosis</h6>
                            <p class="mb-0">
                                @if (Model.CurrentBalance > 0 && Model.ProjectedCashIn30Days < Model.CurrentBalance)
                                {
                                    <span class="text-danger fw-bold">Warning:</span> <span>Your Operations are burning cash.</span>
                                    <br/><span class="small text-muted">You have cash now likely due to loans or past collections, but your daily expenses exceed your daily sales.</span>
                                }
                                else
                                {
                                    <span>Your trend follows your Net Operating Income.</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-4">
                            <h6 class="fw-bold text-dark">3. Smart Filtering</h6>
                            <p class="mb-0">We automatically detected and <strong>excluded</strong> "One-Off" expenses (e.g., Renovations, Deposits, Equipment) from the trend so they don't skew the prediction.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="fw-bold m-0 text-success"><i class="bi bi-sliders me-2"></i>What-If Simulator</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Est. Revenue Change ($)</label>
                        <input type="number" id="scenRevenue" class="form-control" placeholder="e.g. 5000">
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Est. Expense Change ($)</label>
                        <input type="number" id="scenRecur" class="form-control" placeholder="e.g. 2000">
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">One-Time Cost ($)</label>
                        <input type="number" id="scenFixed" class="form-control" placeholder="e.g. 10000">
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-success" onclick="runSimulation()">Simulate</button>
                        <button class="btn btn-outline-secondary btn-sm" onclick="clearSimulation()">Reset</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold m-0"><i class="bi bi-newspaper me-2"></i>Market Outlook & News</h6>
                    <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newsPrefsModal">
                        <i class="bi bi-funnel me-1"></i> Filter Interests
                    </button>
                </div>
                <div class="card-body p-0 d-flex flex-column h-100">

                    <div class="collapse show border-bottom bg-primary bg-opacity-10" id="outlookCollapse">
                        <div class="p-3" style="max-height: 150px; overflow-y: auto;">
                            @if (Model.Outlooks != null && Model.Outlooks.Count > 0)
                            {
                                @foreach (var o in Model.Outlooks)
                                {
                                    <div class="mb-2">
                                        <span class="badge bg-primary me-2">@o.Industry / @o.Region</span>
                                        <span class="small text-dark">@o.OutlookSummary</span>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted small mb-0">No specific outlooks available for your selected filters.</p>
                            }
                        </div>
                    </div>
                    <div class="text-center bg-light border-bottom py-1" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#outlookCollapse">
                        <i class="bi bi-chevron-expand text-muted"></i>
                    </div>

                    <div class="flex-grow-1 p-0" style="min-height: 300px; max-height: 400px; overflow-y: auto;">
                        @if (Model.News != null && Model.News.Count > 0)
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var news in Model.News)
                                {
                                    bool isOld = (DateTime.UtcNow - news.Date).TotalDays > 1;
                                    <li class="list-group-item p-3">
                                        <a href="@news.Url" target="_blank" class="fw-bold text-decoration-none text-dark d-block mb-1">
                                            @news.Title 
                                            @if(isOld) { <i class="text-muted small ms-2" style="font-size: 0.75rem;">(Posted on @news.Date.ToString("MMM dd"))</i> }                                        </a>
                                        <div class="mb-2">
                                            @foreach (var tag in (news.Industries ?? new List<string>()).Concat(news.Regions ?? new List<string>()))
                                            {
                                                <span class="badge bg-light text-secondary border me-1">@tag</span>
                                            }
                                        </div>
                                        <p class="small text-muted mb-0">@news.Summary</p>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="text-center p-5 text-muted">
                                <i class="bi bi-newspaper fs-1 d-block mb-2"></i>
                                No relevant news found. Try adjusting your filters.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="newsPrefsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Customize Feed</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <h6>Industries</h6>
                        @if (ViewBag.AllIndustries != null)
                        {
                            foreach (var i in (List<BIP_SMEMC.Models.IndustryModel>)ViewBag.AllIndustries)
                            {
                                <div class="form-check">
                                    <input class="form-check-input pref-industry" type="checkbox" value="@i.Name" @(Model.UserPreferences?.Industries?.Contains(i.Name) == true ? "checked" : "")>
                                    <label class="form-check-label small">@i.Name</label>
                                </div>
                            }
                        }
                    </div>
                    <div class="col-6">
                        <h6>Regions</h6>
                        @if (ViewBag.AllRegions != null)
                        {
                            foreach (var r in (List<BIP_SMEMC.Models.RegionModel>)ViewBag.AllRegions)
                            {
                                <div class="form-check">
                                    <input class="form-check-input pref-region" type="checkbox" value="@r.Name" @(Model.UserPreferences?.Regions?.Contains(r.Name) == true ? "checked" : "")>
                                    <label class="form-check-label small">@r.Name</label>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary w-100" onclick="updatePreferences()">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const fullData = @Html.Raw(Json.Serialize(Model.ChartData));
        const currentBalance = @Model.CurrentBalance;
        let chartInstance = null;
        const anchorDateStr = "@Model.LatestDataDate.ToString("yyyy-MM-dd")";
        const anchorDate = anchorDateStr ? new Date(anchorDateStr) : new Date();

        document.addEventListener("DOMContentLoaded", () => {
             updateChartWindow(2, 1, document.querySelectorAll('.btn-group button')[0]);
        });

        // 1. Chart Rendering
        function renderChart(filteredData, simulatedData = null) {
            const ctx = document.getElementById('forecastChart').getContext('2d');
            if (chartInstance) chartInstance.destroy();

            const labels = filteredData.map(d => new Date(d.date).toLocaleDateString(undefined, { month: 'short', day: 'numeric' }));
            const actualData = filteredData.map(d => d.actual);
            const predictedData = filteredData.map(d => d.predicted);

            const datasets = [
                {
                    label: 'Historical Balance',
                    data: actualData,
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    pointRadius: (ctx) => {
                        const idx = ctx.dataIndex;
                        const val = ctx.dataset.data[idx];
                        const nextVal = ctx.dataset.data[idx + 1];
                        return (val !== null && (nextVal === null || nextVal === undefined)) ? 4 : 0;
                    },
                    pointBackgroundColor: '#0d6efd',
                    borderWidth: 2,
                    tension: 0.3,
                    fill: true,
                    spanGaps: true
                },
                {
                    label: 'AI Projection',
                    data: predictedData,
                    borderColor: '#6610f2',
                    borderDash: [5, 5],
                    borderWidth: 2,
                    pointRadius: 0,
                    tension: 0.3,
                    fill: false,
                    spanGaps: true
                }
            ];

            if (simulatedData) {
                datasets.push({
                    label: 'Simulated Outcome',
                    data: simulatedData,
                    borderColor: '#198754',
                    borderWidth: 2,
                    borderDash: [2, 2],
                    pointRadius: 0,
                    tension: 0.3,
                    fill: false,
                    spanGaps: true
                });
            }

            chartInstance = new Chart(ctx, {
                type: 'line',
                data: { labels: labels, datasets: datasets },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: { mode: 'index', intersect: false },
                    plugins: {
                        legend: { display: true, position: 'top' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) label += ': ';
                                    if (context.parsed.y !== null) {
                                        label += new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed.y);
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        x: { grid: { display: false } },
                        y: { beginAtZero: false, grid: { borderDash: [5, 5] }, ticks: { callback: (val) => '$' + val / 1000 + 'k' } }
                    }
                }
            });
        }

        // 2. Window Filtering
        function updateChartWindow(monthsBack, monthsForward, btnElement) {
            if (btnElement) {
                document.querySelectorAll('.btn-group button').forEach(b => b.classList.remove('active'));
                btnElement.classList.add('active');
            }

            const startDate = new Date(anchorDate);
            startDate.setMonth(startDate.getMonth() - monthsBack);
            const endDate = new Date(anchorDate);
            endDate.setMonth(endDate.getMonth() + monthsForward);

            const filtered = fullData.filter(d => {
                const dt = new Date(d.date);
                return dt >= startDate && dt <= endDate;
            });
            renderChart(filtered);

            if (document.getElementById('scenRevenue').value) runSimulation();
        }

        function applyCustomRange() {
            const sVal = document.getElementById('startDatePicker').value;
            const eVal = document.getElementById('endDatePicker').value;

            if (!sVal || !eVal) { alert("Please select both dates."); return; }

            const start = new Date(sVal);
            const end = new Date(eVal);

            const filtered = fullData.filter(d => {
                const dt = new Date(d.date);
                return dt >= start && dt <= end;
            });
            renderChart(filtered);
        }

        // 3. Simulation Logic
        function runSimulation() {
            const revIncrease = parseFloat(document.getElementById('scenRevenue').value) || 0;
            const expIncrease = parseFloat(document.getElementById('scenRecur').value) || 0;
            const oneTimeCost = parseFloat(document.getElementById('scenFixed').value) || 0;
            const netMonthlyChange = revIncrease - expIncrease;

            const basePredictionData = chartInstance.data.datasets[1].data;
            let startIdx = basePredictionData.findIndex(v => v !== null);

            if (startIdx === -1) return;

            const simulatedData = [];
            for (let i = 0; i < basePredictionData.length; i++) {
                if (i < startIdx) {
                    simulatedData.push(null);
                } else {
                    const monthsPassed = (i - startIdx) / 30.0;
                    let val = basePredictionData[i] + (netMonthlyChange * monthsPassed) - oneTimeCost;
                    simulatedData.push(val);
                }
            }

            // Remove old simulation if exists
            const existingIdx = chartInstance.data.datasets.findIndex(ds => ds.label === 'Simulated Outcome');
            if (existingIdx !== -1) {
                chartInstance.data.datasets.splice(existingIdx, 1);
            }

            // Add new simulation dataset
            chartInstance.data.datasets.push({
                label: 'Simulated Outcome',
                data: simulatedData,
                borderColor: '#198754',
                borderWidth: 2,
                pointRadius: 0,
                borderDash: [2, 2],
                tension: 0.3,
                fill: false,
                spanGaps: true
            });

            chartInstance.update();
        }

        function clearSimulation() {
            document.getElementById('scenRevenue').value = '';
            document.getElementById('scenRecur').value = '';
            document.getElementById('scenFixed').value = '';
            const existingIdx = chartInstance.data.datasets.findIndex(ds => ds.label === 'Simulated Outcome');
            if (existingIdx !== -1) {
                chartInstance.data.datasets.splice(existingIdx, 1);
                chartInstance.update();
            }
        }

        async function updatePreferences() {
            const indInputs = document.querySelectorAll('.pref-industry:checked');
            const regInputs = document.querySelectorAll('.pref-region:checked');
            const formData = new URLSearchParams();
            indInputs.forEach(cb => formData.append('industries', cb.value));
            regInputs.forEach(cb => formData.append('regions', cb.value));

            await fetch('/CashFlow/UpdatePreferences', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: formData
            });
            location.reload();
        }
    </script>
}