@model BIP_SMEMC.ViewModels.Chat.ChatPageViewModel
@{
    ViewData["Title"] = "Finance Chat";
}

<div class="container-fluid py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h1 class="h3 mb-1">Finance Chat Assistant</h1>
            <p class="text-muted mb-0">Grounded on your uploaded report, saved goal, and fix progress.</p>
        </div>
        <form method="get" class="d-flex gap-2 align-items-center">
            <label class="form-label mb-0">Report Year</label>
            <select name="year" class="form-select" style="width: 150px;" onchange="this.form.submit()">
                @foreach (var y in Model.AvailableYears)
                {
                    <option value="@y" selected="@(y == Model.SelectedYear ? "selected" : null)">@y</option>
                }
            </select>
        </form>
    </div>

    <div class="row g-3">
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="h5">Financial Context (Used by AI)</h2>
                    <pre class="small bg-light p-3 rounded" style="max-height: 520px; overflow:auto; white-space: pre-wrap;">@Model.FinancialContextPreview</pre>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h2 class="h5">Conversation</h2>
                    <div id="chatStream" class="flex-grow-1 border rounded p-3 bg-light" style="min-height: 350px; max-height: 520px; overflow:auto;">
                        @if (Model.Messages.Any())
                        {
                            foreach (var msg in Model.Messages)
                            {
                                <div class="mb-3">
                                    <div class="small text-muted">@msg.Role • @msg.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</div>
                                    <div class="p-2 rounded @(msg.Role == "user" ? "bg-white border" : "bg-white border-start border-4 border-primary")" style="white-space: pre-wrap;">@msg.Message</div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted mb-0">Ask a finance question to start.</p>
                        }
                    </div>

                    <div class="input-group mt-3">
                        <input id="chatMessage" class="form-control" placeholder="Ask about profitability, margin, expenses, cashflow, or goal feasibility" />
                        <button class="btn btn-primary" type="button" onclick="sendMessage()">Send</button>
                    </div>
                    <div class="form-text">Finance-only guardrail is enabled.</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function sendMessage() {
            const input = document.getElementById("chatMessage");
            const text = input.value.trim();
            if (!text) return;

            appendMessage("user", text);
            input.value = "";

            const res = await fetch("/Chat/Send", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ reportYear: @Model.SelectedYear, message: text })
            });

            const result = await res.json();
            if (!res.ok || !result.success) {
                appendMessage("assistant", result.error || "Request failed.");
                return;
            }

            const data = result.response;
            const responseText = [
                data.answer,
                "",
                "Action items:",
                ...data.actionItems.map(x => `- ${x}`),
                "",
                "Which numbers I used:",
                `- Revenue: ${Number(data.usedNumbers.revenue).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`,
                `- Expenses: ${Number(data.usedNumbers.expenses).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`,
                `- Net Profit: ${Number(data.usedNumbers.netProfit).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`,
                `- Profit Margin: ${Number(data.usedNumbers.profitMargin).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })}%`,
                `- Top Expense Categories: ${(data.usedNumbers.topExpenseCategories || []).join(", ")}`
            ].join("\n");

            appendMessage("assistant", responseText);
        }

        function appendMessage(role, message) {
            const stream = document.getElementById("chatStream");
            const wrapper = document.createElement("div");
            wrapper.className = "mb-3";

            const meta = document.createElement("div");
            meta.className = "small text-muted";
            meta.textContent = `${role} • ${new Date().toLocaleString()}`;

            const body = document.createElement("div");
            body.className = role === "user"
                ? "p-2 rounded bg-white border"
                : "p-2 rounded bg-white border-start border-4 border-primary";
            body.style.whiteSpace = "pre-wrap";
            body.textContent = message;

            wrapper.appendChild(meta);
            wrapper.appendChild(body);
            stream.appendChild(wrapper);
            stream.scrollTop = stream.scrollHeight;
        }
    </script>
}

