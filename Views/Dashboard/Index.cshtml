@model BIP_SMEMC.Models.DashboardViewModel

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold mb-0">Financial Overview</h1>
            <p class="text-muted small">Snapshot as of @DateTime.Now.ToString("MMM dd, yyyy")</p>
        </div>
        <a href="/CashFlow" class="btn btn-primary btn-sm"><i class="bi bi-graph-up me-2"></i>Full Forecast</a>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card p-3 shadow-sm border-0 h-100 bg-white border-start border-4 border-success">
                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Revenue (30 Days)</small>
                <h3 class="text-success fw-bold mt-1">$@Model.TotalRevenue.ToString("N0")</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm border-0 h-100 bg-white border-start border-4 border-danger">
                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Expenses (30 Days)</small>
                <h3 class="text-danger fw-bold mt-1">$@Model.TotalExpenses.ToString("N0")</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm border-0 h-100 bg-white border-start border-4 border-primary">
                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Net Profit</small>
                <h3 class="text-primary fw-bold mt-1">$@Model.NetProfit.ToString("N0")</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card p-3 shadow-sm border-0 h-100 bg-white border-start border-4 border-warning">
                <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Total Debt</small>
                <h3 class="text-dark fw-bold mt-1">$@Model.TotalDebt.ToString("N0")</h3>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="fw-bold m-0">Net Cashflow Trend (6 Months)</h6>
                </div>
                <div class="card-body">
                    <canvas id="dashboardChart" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold m-0 text-danger"><i class="bi bi-lightning-charge-fill me-2"></i>Action Required</h6>
                    <span class="badge bg-danger rounded-pill">@Model.ActionItems.Count</span>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var item in Model.ActionItems.Take(4))
                    {
                        <a href="@item.LinkAction" class="list-group-item list-group-item-action py-3">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1 fw-bold text-dark">@item.Title</h6>
                                <small class="@(item.Priority == "High" ? "text-danger fw-bold" : "text-muted")">@item.Priority</small>
                            </div>
                            <p class="mb-1 small text-muted">@item.Reasoning</p>
                        </a>
                    }
                    @if (!Model.ActionItems.Any())
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-check-circle fs-1 text-success mb-2"></i>
                            <p>No urgent issues detected.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-info border-0 shadow-sm mt-4 d-flex align-items-start">
        <i class="bi bi-robot fs-3 me-3"></i>
        <div>
            <h6 class="fw-bold">AI Financial Insight</h6>
            <p class="mb-0 small">@Model.AiSummary</p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const chartData = @Html.Raw(Json.Serialize(Model.CashflowTrend));

        const ctx = document.getElementById('dashboardChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: chartData.map(d => d.date),
                datasets: [{
                    label: 'Net Cashflow',
                    data: chartData.map(d => d.actual),
                    backgroundColor: chartData.map(d => d.actual >= 0 ? '#10b981' : '#ef4444'),
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: { y: { beginAtZero: true } }
            }
        });
    </script>
}